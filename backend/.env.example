# ===========================================
# SESSION & CACHE CONFIGURATION
# ===========================================
# For development: use database
# For production: use redis for better performance

# Session Configuration
SESSION_DRIVER=database
# SESSION_DRIVER=redis  # Uncomment for production
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
# QUEUE_CONNECTION=redis  # Uncomment for production

# Cache Configuration
CACHE_STORE=database
# CACHE_STORE=redis  # Uncomment for production
# CACHE_PREFIX=bunda_paud_

MEMCACHED_HOST=127.0.0.1

# ===========================================
# REDIS CONFIGURATION (For Production)
# ===========================================
# Install Redis: docker run -d -p 6379:6379 redis:alpine
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
# REDIS_HOST=redis  # Use this if running in Docker
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

